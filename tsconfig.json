{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "noImplicitOverride": true,
        "exactOptionalPropertyTypes": true,
        "useDefineForClassFields": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "ES2021",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "vite/client"
        ],
        "baseUrl": ".",
        "paths": {
            "@engine/*": [
                "src/engine/*"
            ],
            "@scenes/*": [
                "src/scenes/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ]
        }
    },
    "include": [
        "src",
        "vite.config.ts",
        "index.html"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}